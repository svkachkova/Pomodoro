{
  "name": "pomodoro",
  "version": "1.0.0",
  "description": "a simple pomodoro timer",
  "main": "index.js",
  "scripts": {
    "start": "gulp build",
    "dev": "gulp dev",
    "fix:scss": "stylelint --fix src/**/*.scss",
    "fix:ts": "eslint --fix src/**/*.{ts,tsx}",
    "fix": "npm run fix:scss && npm run fix:ts && prettier --write src/**/*.*",
    "test:mocha": "mocha -r ts-node/register -r jsdom-global/register src/**/*.test.ts",
    "test:jest": "jest",
    "test": "npm run test:jest & npm run test:mocha",
    "npm-check": "npx npm-check -u"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/svkachkova/Pomodoro.git"
  },
  "keywords": [
    "pomodoro",
    "timer"
  ],
  "author": "Svetlana Kachkova sv.kachkova@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/svkachkova/Pomodoro/issues"
  },
  "homepage": "https://github.com/svkachkova/Pomodoro#readme",
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/enzyme": "^3.10.5",
    "@types/jest": "^25.1.4",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.9.8",
    "@types/react": "^16.9.29",
    "@types/react-dom": "^16.9.5",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "browser-sync": "^2.26.5",
    "chai": "^4.2.0",
    "del": "^5.1.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "gulp": "^4.0.2",
    "gulp-clean-css": "^4.3.0",
    "gulp-plumber": "^1.2.1",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "husky": "^4.2.5",
    "jest": "^25.2.4",
    "jsdom": "^16.2.2",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^10.2.6",
    "mocha": "^7.1.1",
    "prettier": "^2.0.2",
    "react-test-renderer": "^16.13.1",
    "stylelint": "^13.2.1",
    "stylelint-config-airbnb": "0.0.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.16.0",
    "stylelint-selector-bem-pattern": "^2.1.0",
    "ts-jest": "^25.3.0",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3",
    "webpack-stream": "^5.2.1"
  },
  "dependencies": {
    "js-cookie": "^2.2.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": "eslint --cache --fix",
    "src/**/*.scss": "stylelint --fix",
    "src/**/*.*": "prettier --write"
  }
}
