{
  "name": "pomodoro",
  "version": "1.0.0",
  "description": "a simple pomodoro timer",
  "main": "index.js",
  "scripts": {
    "start": "gulp build",
    "dev": "gulp dev",
    "deploy-ghpages": "gh-pages -d build",
    "fix:scss": "stylelint --fix src/**/*.scss",
    "fix:ts": "eslint --fix src/**/*.{ts,tsx}",
    "fix": "npm run fix:scss && npm run fix:ts && prettier --write src/**/*.*",
    "test:mocha": "mocha -r ts-node/register -r jsdom-global/register src/**/*.test.ts",
    "test:jest": "jest",
    "test": "npm run test:jest & npm run test:mocha",
    "npm-check": "npx npm-check -u"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/svkachkova/Pomodoro.git"
  },
  "keywords": [
    "pomodoro",
    "timer"
  ],
  "author": "Svetlana Kachkova sv.kachkova@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/svkachkova/Pomodoro/issues"
  },
  "homepage": "https://github.com/svkachkova/Pomodoro#readme",
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/enzyme": "^3.10.9",
    "@types/jest": "^26.0.24",
    "@types/mocha": "^8.2.3",
    "@types/node": "^16.3.3",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "browser-sync": "^2.27.4",
    "chai": "^4.3.4",
    "del": "^6.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "gh-pages": "^3.2.3",
    "gulp": "^4.0.2",
    "gulp-clean-css": "^4.3.0",
    "gulp-plumber": "^1.2.1",
    "gulp-sass": "^5.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "jsdom": "^16.6.0",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^11.0.1",
    "mocha": "^9.0.2",
    "prettier": "^2.3.2",
    "react-test-renderer": "^17.0.2",
    "sass": "^1.35.2",
    "stylelint": "^13.13.1",
    "stylelint-config-airbnb": "0.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.20.1",
    "stylelint-selector-bem-pattern": "^2.1.0",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "webpack-stream": "^6.1.2"
  },
  "dependencies": {
    "js-cookie": "^2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": "eslint --cache --fix",
    "src/**/*.scss": "stylelint --fix",
    "src/**/*.*": "prettier --write"
  }
}
